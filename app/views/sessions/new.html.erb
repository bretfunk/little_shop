<div class="jumbotron">
  <div class="container">
    <%= form_for :session, url: login_path, :html => {:class => "form-horizontal"} do |f| %>
        <div class="email"><%= f.label :email %>
        <%= f.text_field :email %></div><br>
        <div class="password"><%= f.label :password %>
        <%= f.password_field :password %></div>
        <%= f.submit "Login", class: "btn btn-info" %>
    <% end %>
  </div>
</div>
