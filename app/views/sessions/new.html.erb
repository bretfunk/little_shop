<div class="container">
  <%= form_for :session, url: login_path, :html => {:class => "form-inline"} do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
      <%= f.submit "Log in", class: "btn btn-danger" %>
  <% end %>
</div>
