<div class="container">
  <ul class="items_group">
    <% @orders.each do |order| %>
      <li class="list-group-item">
        <div class="orderlinks">
          <%= link_to "View Order from #{order.order_date}", order_path(order)%>
        </div>
        <p>Order ID: <%= order.id %></p>
        <p>Total: <%= order.total %></p>
        <p>Address: <%= order.delivery_address %></p>
        <p>Phone number: <%= order.order_phone %></p>
      </li>
    <% end %>
  </ul>
</div>
