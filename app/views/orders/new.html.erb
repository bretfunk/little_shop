<%= form_for @order , :url => url_for(:controller => 'orders', :action => 'create') do |f| %>
  <%= f.label :order_address %>
  <%= f.text_field :order_address %>

  <%= f.label :order_city %>
  <%= f.text_field :order_city %>

  <%= f.label :order_state %>
  <%= f.text_field :order_state %>

  <%= f.label :order_zipcode %>
  <%= f.text_field :order_zipcode %>

  <%= f.label :order_phone %>
  <%= f.text_field :order_phone %>

  <%= f.submit %>
<% end %>
